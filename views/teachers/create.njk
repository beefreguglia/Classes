{% extends "layout.njk" %}

{% block content %}

    <form action="/teachers" method="POST" class="card">
    
        <section 
        
            class="avatar"
            style="background: url(https://source.unsplash.com/collection/3137179/500x500) no-repeat center center / cover">
        
        </section>
        
        <section class="details">

            <h3>Detalhes</h3>

            <div class="item">

                <div>Avatar Url</div>
                <div><input type="url" name="avatar_url" placeholder="https://"></div>

            </div>

            <div class="item">

                <div>Nome Completo</div>
                <div><input type="text" name="name" placeholder="Nome Completo"></div>

            </div>

            <div class="item">

                <div>Data de nascimento</div>
                <div><input type="date" name="birth"></div>

            </div>

            <div class="item">

                <div>Grau de escolaridade</div>
                <div>

                    <select name="grau_escolaridade">

                        <option value="EMC">Ensino Médio Completo</option>
                        <option value="ESC">Ensino Superior Completo</option>
                        <option value="mestrado">Mestrado</option>
                        <option value="doutorado">Doutorado</option>

                    </select>

                </div>

            </div>

            <div class="item">

                <div>Tipo de aula</div>
                <div>

                    <span><input type="radio" name="type" value="P">Presencial</span>
                    <span><input type="radio" name="type" value="D">À distância</span>

                </div>
            </div>

            <div class="item">

                <div>Area de Atuação</div>
                <div>

                    <input type="text" name="subjects" placeholder="Materias separadas por vírgula">

                </div>

            </div>

            <button type="submit">Salvar</button>

        </section>
    
    </form>


{% endblock content %}