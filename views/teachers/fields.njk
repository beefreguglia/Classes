<div class="item">

    <div>Avatar Url</div>
    <div><input type="url" name="avatar_url" placeholder="https://" value="{{teacher.avatar_url}}"></div>

</div>

<div class="item">

    <div>Nome Completo</div>
    <div><input type="text" name="name" placeholder="Nome Completo" value="{{teacher.name}}"></div>

</div>

<div class="item">

    <div>Data de nascimento</div>
    <div><input type="date" name="birth" value="{{teacher.birth}}"></div>

</div>

<div class="item">

    <div>Grau de escolaridade</div>
    <div>

        <select name="grau_escolaridade">

            <option value="EMC" {% if teacher.grau_escolaridade == "EMC" %}selected{% endif %}>Ensino Médio Completo</option>
            <option value="ESC" {% if teacher.grau_escolaridade == "ESC" %}selected{% endif %}>Ensino Superior Completo</option>
            <option value="mestrado" {% if teacher.grau_escolaridade == "mestrado" %}selected{% endif %}>Mestrado</option>
            <option value="doutorado" {% if teacher.grau_escolaridade == "doutorado" %}selected{% endif %}>Doutorado</option>

        </select>

    </div>

</div>

<div class="item">

    <div>Tipo de aula</div>
    <div>

        <span><input type="radio" name="type" value="P" {% if teacher.type == "P" %}checked{% endif %}>Presencial</span>
        <span><input type="radio" name="type" value="D" {% if teacher.type == "D" %}checked{% endif %}>À distância</span>

    </div>
</div>

<div class="item">

    <div>Area de Atuação</div>
    <div>

        <input type="text" name="subjects" placeholder="Materias separadas por vírgula" value="{{teacher.subjects}}">

    </div>

</div>

<button type="submit">Salvar</button>